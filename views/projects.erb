<h3>Projects page</h3>


<% if @projects.any? %>
  <h3>List of projects:</h3>

  <ul>
    <% @project.seach do |project| %>
      <li><a href="/projects/<%= project.id()%>"><%= project.title %></a> </li>
    <% end %>
  </ul>

<% else %>

    <p>There are no projects yet!</p>

<% end %>

<form class="form-group" action="/projects" method="post">
  <h4>Add new project</h4>
  <div class="add_project">
    <label for="new_project"></label>
    <input type="text" name="new_project" id="new_project">
  </div>
    <button type="submit" name="button">Create Project</button>
  </form>

  
